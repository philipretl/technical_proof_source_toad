{
  "name": "philipretl/technical_test_sourcetoad",
  "description": "A technical test for getting Php developer position",
  "type": "project",
  "autoload": {
    "psr-4": {
      "Philipretl\\TechnicalTestSourcetoad\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "andres vega",
      "email": "afelipe.vega@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-pdo": "*",
    "laravel/prompts": "^0.1.7"
  },
  "require-dev": {
    "pestphp/pest": "^2.18",
    "mockery/mockery": "^1.6"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "test": "./vendor/bin/pest",
    "test-coverage" : "./vendor/bin/pest --coverage",
    "test-coverage-html" : "./vendor/bin/pest --coverage --coverage-html tests/coverage"
  }
}
